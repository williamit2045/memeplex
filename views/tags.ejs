<!--views/tags.ejs-->

<%- include('partials/header') %>
<%- include('partials/nav') %>

<body class="bg-gray-50">
    <main class="container mx-auto px-4">
        <div class="max-w-full mx-auto">
            <h1 class="text-center text-4xl font-bold mb-8">All Tags</h1>

            <!-- Tag Cloud Section -->
            <div id="tag-cloud" class="flex flex-wrap gap-4">
                <% if (tags && tags.length > 0) { %>
                    <% tags.forEach(tag => { %>
                        <% const fontSize = Math.min(3, 1 + tag.user_count / 10); %>
                        <a href="/tags/<%= tag.id %>" class="tag" style="font-size: <%= fontSize %>rem">
                            <%= tag.name %>
                        </a>
                    <% }) %>
                <% } else { %>
                    <p>No tags available.</p>
                <% } %>
            </div>
        </div>
    </main>

    <style>
        #tag-cloud .tag {
            display: inline-block;
            color: #1a73e8;
            text-decoration: none;
            transition: transform 0.3s ease;
        }

        #tag-cloud .tag:hover {
            transform: scale(1.2);
            color: #0b57d0;
        }
    </style>
</body>
</html>
